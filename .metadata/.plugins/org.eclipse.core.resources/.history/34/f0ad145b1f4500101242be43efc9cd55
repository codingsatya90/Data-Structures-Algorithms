package dsa.star.in.sit;

public class Butterfly_Pattern {

	public static void main(String[] args) {
		
		int n=5;
		//upper half
		for(int i=1; i<=n; i++) {
			
			//1st half
			for(int j=1; j<=i; j++) {
				System.out.print("*");
			}
			
		//	System.out.println();
			//space print
			int spaces=2*(n-i);
			for(int j=1; j<=spaces;j++ ) {
				System.out.print(" ");
		}
			System.out.println();
		}
	}
}
